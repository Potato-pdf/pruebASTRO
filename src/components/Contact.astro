---
// Información de contacto
const contactInfo = {
  email: 'info@electrovibefestival.com',
  phone: '+34 900 123 456',
  address: 'Recinto Ferial IFEMA, Madrid, España',
  socialMedia: [
    { name: 'Instagram', url: 'https://instagram.com/electrovibe', icon: 'instagram' },
    { name: 'Twitter', url: 'https://twitter.com/electrovibe', icon: 'twitter' },
    { name: 'Facebook', url: 'https://facebook.com/electrovibe', icon: 'facebook' },
    { name: 'YouTube', url: 'https://youtube.com/electrovibe', icon: 'youtube' }
  ]
};
---

<section id="contact" class="py-20 bg-dark relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0 opacity-10">
    <div class="absolute top-0 right-0 w-full h-full bg-[url('/images/pattern.svg')] bg-repeat opacity-5"></div>
  </div>
  
  <div class="container mx-auto px-4 z-10 relative">
    <h2 class="text-4xl md:text-5xl font-display text-center text-light mb-16 relative overflow-hidden">
      <span class="inline-block contact-title">CONTACTO</span>
    </h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Formulario de contacto -->
      <div class="contact-form-container" data-aos="fade-right">
        <div class="bg-dark/50 backdrop-blur-sm border border-light/10 rounded-xl p-6 md:p-8">
          <h3 class="text-2xl font-display text-light mb-6">Envíanos un mensaje</h3>
          
          <form class="contact-form space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="form-group">
                <label for="name" class="text-light/80 mb-2 block">Nombre</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full bg-dark/70 border border-light/20 rounded-lg px-4 py-3 text-light focus:border-primary focus:outline-none transition-colors duration-300"
                  required
                />
              </div>
              
              <div class="form-group">
                <label for="email" class="text-light/80 mb-2 block">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full bg-dark/70 border border-light/20 rounded-lg px-4 py-3 text-light focus:border-primary focus:outline-none transition-colors duration-300"
                  required
                />
              </div>
            </div>
            
            <div class="form-group">
              <label for="subject" class="text-light/80 mb-2 block">Asunto</label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                class="w-full bg-dark/70 border border-light/20 rounded-lg px-4 py-3 text-light focus:border-primary focus:outline-none transition-colors duration-300"
                required
              />
            </div>
            
            <div class="form-group">
              <label for="message" class="text-light/80 mb-2 block">Mensaje</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                class="w-full bg-dark/70 border border-light/20 rounded-lg px-4 py-3 text-light focus:border-primary focus:outline-none transition-colors duration-300 resize-none"
                required
              ></textarea>
            </div>
            
            <div class="form-group">
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-primary to-secondary text-white font-bold py-3 px-6 rounded-lg transform transition-all duration-300 hover:shadow-lg hover:shadow-primary/30 hover:-translate-y-1"
              >
                ENVIAR MENSAJE
              </button>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Información de contacto -->
      <div class="contact-info-container" data-aos="fade-left">
        <div class="bg-dark/50 backdrop-blur-sm border border-light/10 rounded-xl p-6 md:p-8 h-full">
          <h3 class="text-2xl font-display text-light mb-8">Información de contacto</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="text-primary mr-4 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="text-light font-medium mb-1">Email</h4>
                <a href={`mailto:${contactInfo.email}`} class="text-light/70 hover:text-primary transition-colors duration-300">
                  {contactInfo.email}
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="text-primary mr-4 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="text-light font-medium mb-1">Teléfono</h4>
                <a href={`tel:${contactInfo.phone}`} class="text-light/70 hover:text-primary transition-colors duration-300">
                  {contactInfo.phone}
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="text-primary mr-4 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="text-light font-medium mb-1">Dirección</h4>
                <p class="text-light/70">
                  {contactInfo.address}
                </p>
              </div>
            </div>
            
            <div>
              <h4 class="text-light font-medium mb-3">Redes Sociales</h4>
              <div class="flex space-x-4">
                {contactInfo.socialMedia.map(social => (
                  <a 
                    href={social.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-light/70 hover:text-primary transition-colors duration-300"
                    aria-label={`Visita nuestro perfil de ${social.name}`}
                  >
                    <span class="sr-only">{social.name}</span>
                    {social.icon === 'instagram' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    )}
                    {social.icon === 'twitter' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                      </svg>
                    )}
                    {social.icon === 'facebook' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                      </svg>
                    )}
                    {social.icon === 'youtube' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                      </svg>
                    )}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-title {
    position: relative;
  }
  
  .contact-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--tw-color-primary), var(--tw-color-secondary));
    border-radius: 2px;
  }
  
  .form-group label {
    transition: all 0.3s ease;
  }
  
  .form-group input:focus + label,
  .form-group textarea:focus + label {
    color: var(--tw-color-primary);
  }
  
  .contact-form-container,
  .contact-info-container {
    transition: transform 0.5s ease;
  }
  
  .contact-form-container:hover,
  .contact-info-container:hover {
    transform: translateY(-5px);
  }
</style>

<script>
  // Validación simple del formulario
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('.contact-form');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Aquí iría la lógica para enviar el formulario
        // Por ahora solo mostramos un mensaje
        alert('¡Gracias por tu mensaje! Te contactaremos pronto.');
        form.reset();
      });
    }
  });
</script>