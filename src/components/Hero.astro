---
// Información del festival
const festivalInfo = {
  name: "ELECTROVIBE",
  tagline: "FESTIVAL 2025",
  dates: "15-17 AGOSTO 2025",
  location: "MADRID, ESPAÑA",
  description: "El festival de música electrónica más espectacular de Europa. Tres días de música, tecnología y experiencias únicas."
};
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden bg-dark">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0">
    <!-- Gradiente de fondo -->
    <div class="absolute inset-0 bg-gradient-to-b from-dark via-dark/90 to-dark z-0"></div>
    
    <!-- Partículas animadas -->
    <div id="particles-js" class="absolute inset-0 z-0"></div>
    
    <!-- Círculos decorativos -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full bg-primary/20 filter blur-3xl animate-pulse-slow z-0"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 h-64 rounded-full bg-secondary/20 filter blur-3xl animate-pulse-slow z-0"></div>
    <div class="absolute top-3/4 left-1/2 w-80 h-80 rounded-full bg-accent/20 filter blur-3xl animate-pulse-slow z-0"></div>
  </div>
  
  <div class="container mx-auto px-4 z-10 relative py-20">
    <div class="text-center">
      <!-- Logo y título principal -->
      <div class="hero-title-container mb-6" data-aos="zoom-in">
        <h1 class="text-6xl md:text-8xl lg:text-9xl font-display font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary via-secondary to-accent mb-4 tracking-wider hero-title">
          {festivalInfo.name}
        </h1>
        <p class="text-2xl md:text-3xl font-display text-light tracking-widest hero-tagline">
          {festivalInfo.tagline}
        </p>
      </div>
      
      <!-- Información del festival -->
      <div class="hero-info mb-12" data-aos="fade-up" data-aos-delay="200">
        <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-12">
          <div class="flex items-center">
            <div class="text-primary mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <span class="text-light text-lg md:text-xl">{festivalInfo.dates}</span>
          </div>
          
          <div class="hidden md:block w-1.5 h-1.5 rounded-full bg-primary"></div>
          
          <div class="flex items-center">
            <div class="text-secondary mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <span class="text-light text-lg md:text-xl">{festivalInfo.location}</span>
          </div>
        </div>
      </div>
      
      <!-- Descripción -->
      <p class="text-light/80 text-lg md:text-xl max-w-3xl mx-auto mb-12 hero-description" data-aos="fade-up" data-aos-delay="400">
        {festivalInfo.description}
      </p>
      
      <!-- Botones de acción -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 hero-cta" data-aos="fade-up" data-aos-delay="600">
        <a 
          href="#tickets" 
          class="bg-gradient-to-r from-primary to-secondary text-white font-bold py-3 px-8 rounded-full transform transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-primary/30 text-lg"
        >
          COMPRAR ENTRADAS
        </a>
        
        <a 
          href="#lineup" 
          class="bg-transparent border-2 border-light/30 text-light font-bold py-3 px-8 rounded-full transform transition-all duration-300 hover:border-primary hover:text-primary hover:scale-105 text-lg"
        >
          VER LINEUP
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10">
    <div class="scroll-indicator">
      <div class="mouse">
        <div class="wheel"></div>
      </div>
      <div>
        <span class="scroll-arrow"></span>
        <span class="scroll-arrow"></span>
        <span class="scroll-arrow"></span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-title {
    text-shadow: 0 0 20px rgba(108, 2, 255, 0.5);
    animation: textGlow 3s ease-in-out infinite alternate;
  }
  
  @keyframes textGlow {
    0% {
      text-shadow: 0 0 20px rgba(108, 2, 255, 0.5);
    }
    50% {
      text-shadow: 0 0 30px rgba(255, 0, 153, 0.7), 0 0 40px rgba(0, 240, 255, 0.3);
    }
    100% {
      text-shadow: 0 0 20px rgba(108, 2, 255, 0.5);
    }
  }
  
  .hero-tagline {
    letter-spacing: 0.5em;
    animation: fadeInUp 1s ease-out forwards;
  }
  
  /* Scroll indicator styles */
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .mouse {
    width: 30px;
    height: 50px;
    border: 2px solid rgba(240, 240, 255, 0.3);
    border-radius: 20px;
    position: relative;
    margin-bottom: 10px;
  }
  
  .wheel {
    width: 6px;
    height: 6px;
    background-color: rgba(240, 240, 255, 0.6);
    border-radius: 50%;
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 1.5s infinite;
  }
  
  @keyframes scrollWheel {
    0% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateX(-50%) translateY(20px);
    }
  }
  
  .scroll-arrow {
    display: block;
    width: 10px;
    height: 10px;
    border-right: 2px solid rgba(240, 240, 255, 0.3);
    border-bottom: 2px solid rgba(240, 240, 255, 0.3);
    transform: rotate(45deg);
    margin: -5px;
    animation: scrollArrow 1.5s infinite;
  }
  
  .scroll-arrow:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .scroll-arrow:nth-child(3) {
    animation-delay: 0.4s;
  }
  
  @keyframes scrollArrow {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>

<script>
  // Animación de texto con GSAP
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  document.addEventListener('DOMContentLoaded', () => {
    // Registrar plugins
    gsap.registerPlugin(ScrollTrigger);
    
    // Animación del título
    gsap.from('.hero-title', {
      duration: 1.5,
      opacity: 0,
      y: 50,
      ease: 'power3.out'
    });
    
    // Animación de la información
    gsap.from('.hero-info', {
      duration: 1.2,
      opacity: 0,
      y: 30,
      delay: 0.5,
      ease: 'power3.out'
    });
    
    // Animación de la descripción
    gsap.from('.hero-description', {
      duration: 1.2,
      opacity: 0,
      y: 30,
      delay: 0.8,
      ease: 'power3.out'
    });
    
    // Animación de los botones
    gsap.from('.hero-cta a', {
      duration: 1,
      opacity: 0,
      y: 20,
      stagger: 0.2,
      delay: 1.2,
      ease: 'power3.out'
    });
  });
</script>