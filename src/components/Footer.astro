---
// Información del festival
const festivalInfo = {
  name: "ELECTROVIBE",
  year: new Date().getFullYear(),
  socialMedia: [
    { name: 'Instagram', url: 'https://instagram.com/electrovibe', icon: 'instagram' },
    { name: 'Twitter', url: 'https://twitter.com/electrovibe', icon: 'twitter' },
    { name: 'Facebook', url: 'https://facebook.com/electrovibe', icon: 'facebook' },
    { name: 'YouTube', url: 'https://youtube.com/electrovibe', icon: 'youtube' },
    { name: 'Spotify', url: 'https://open.spotify.com/user/electrovibe', icon: 'spotify' }
  ],
  links: [
    { name: 'Inicio', url: '#' },
    { name: 'Line Up', url: '#lineup' },
    { name: 'Entradas', url: '#tickets' },
    { name: 'Galería', url: '#gallery' },
    { name: 'Contacto', url: '#contact' },
    { name: 'Política de Privacidad', url: '#' },
    { name: 'Términos y Condiciones', url: '#' }
  ]
};
---

<footer class="bg-black relative overflow-hidden pt-20 pb-10">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-t from-black to-dark/50 z-0"></div>
    <div class="absolute bottom-0 left-0 w-full h-1/2 bg-[url('/images/wave-pattern.svg')] bg-repeat-x bg-bottom opacity-5 z-0"></div>
  </div>
  
  <div class="container mx-auto px-4 z-10 relative">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Logo y descripción -->
      <div class="md:col-span-1">
        <div class="mb-6">
          <h3 class="text-3xl font-display font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary via-secondary to-accent">
            {festivalInfo.name}
          </h3>
        </div>
        <p class="text-light/70 mb-6">
          El festival de música electrónica más espectacular de Europa. Tres días de música, tecnología y experiencias únicas.  
        </p>
        <div class="flex space-x-4">
          {festivalInfo.socialMedia.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-light/50 hover:text-primary transition-colors duration-300"
              aria-label={`Visita nuestro perfil de ${social.name}`}
            >
              <span class="sr-only">{social.name}</span>
              {social.icon === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'twitter' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
              {social.icon === 'spotify' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Enlaces de navegación -->
      <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h4 class="text-xl font-display text-light mb-6">Enlaces Rápidos</h4>
          <ul class="space-y-4">
            {festivalInfo.links.slice(0, 5).map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-light/70 hover:text-primary transition-all duration-300 transform hover:translate-x-2 inline-block"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h4 class="text-xl font-display text-light mb-6">Legal</h4>
          <ul class="space-y-4">
            {festivalInfo.links.slice(5).map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-light/70 hover:text-primary transition-all duration-300 transform hover:translate-x-2 inline-block"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Línea divisoria con gradiente -->
    <div class="h-px w-full bg-gradient-to-r from-transparent via-light/10 to-transparent mb-8"></div>

    <!-- Copyright -->
    <div class="text-center text-light/50">
      <p>© {festivalInfo.year} {festivalInfo.name}. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>